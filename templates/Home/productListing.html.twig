<section class="products__listing__mainarea">
    <div class="container-fluid">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <div class="products__listing__overlytext animatable bounceInRight">
                        <h1>WE ALWAYS <span>CARE FOR</span></h1>
                        <h1>OUR <span>CUSTOMERS</span></h1>
                    </div>
                    <div class="products__listing__heading">
                        <h1>Product <span>Listing</span></h1>
                    </div>
                    <div id="productslisting" class="owl-carousel owl-theme animated fadeInUp">

                        {% for category in categories %}
                        <div class="item animated fadeInUp">
                            <div class="itemowl">
                                <div class="products__listing__main">
                                    <div class="products__listing__image">
                                        <div>
                                            <img src="{{ asset('images/categories/')~category.getImageName()  }}" alt="{{ category.translate.getName() }}">
                                        </div>
                                        <div class="products__listing__image__overlylayre">
                                            <div>
                                                <h1>{{ category.translate.getName() }}</h1>
                                                <a href="#">Click Here</a>
                                            </div>
                                        </div>
                                        <div class="products__number">{{ category.getId()|e }}</div>
                                    </div>
                                    <div class="products__listing__text">
                                        <h3>{{ category.translate.getName() }}</h3>
                                        <p>{{ category.translate.getDescription() }}</p>
                                        <a href="#">See More <svg aria-hidden="true" focusable="false" data-prefix="far" data-icon="arrow-circle-right" role="img" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 512 512" class="svg-inline--fa fa-arrow-circle-right fa-w-16 fa-3x"><path fill="currentColor" d="M8 256c0 137 111 248 248 248s248-111 248-248S393 8 256 8 8 119 8 256zm448 0c0 110.5-89.5 200-200 200S56 366.5 56 256 145.5 56 256 56s200 89.5 200 200zM266.9 126.1l121.4 121.4c4.7 4.7 4.7 12.3 0 17L266.9 385.9c-4.7 4.7-12.3 4.7-17 0l-19.6-19.6c-4.8-4.8-4.7-12.5.2-17.2l70.3-67.1H140c-6.6 0-12-5.4-12-12v-28c0-6.6 5.4-12 12-12h160.8l-70.3-67.1c-4.9-4.7-5-12.4-.2-17.2l19.6-19.6c4.7-4.7 12.3-4.7 17 0z" class=""></path></svg></a>
                                    </div>
                                </div>
                            </div>
                        </div>
                        {% endfor %}


                    </div>
                </div>
            </div>
        </div>
    </div>
</section>